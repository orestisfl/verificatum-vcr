.PHONY: clean dist

all: .build.bstamp
.build.bstamp:
	mkdir -p m4
	cp src/m4/* m4/
	aclocal -I m4
	autoconf
	automake --add-missing --force-missing --copy
	@touch .build.bstamp

api: .build.bstamp
	./configure
	$(MAKE) api

dist: .build.bstamp
	./configure
	$(MAKE) dist

clean:
	-$(MAKE) clean
	@find . -name "*~" -delete
	@rm -rf INSTALL aclocal.m4 autom4te.cache config.guess config.log config.status config.sub configure install-sh m4 Makefile.in Makefile missing INSTALL py-compile verificatum-*.tar.gz checks/*.class preprocessor.m4 *.bstamp .*.bstamp
